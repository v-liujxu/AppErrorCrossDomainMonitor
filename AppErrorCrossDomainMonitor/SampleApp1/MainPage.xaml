<Page
    x:Class="SampleApp1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SampleApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" RequestedTheme="Dark">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Exception" x:Name="ButtonException" Click="ButtonException_Click" Margin="30" Width="120"></Button>
            <Button Content="Clear" x:Name="ButtonClear" Click="ButtonClear_Click" Margin="30"  Width="120"></Button>
        </StackPanel>
    </Grid>
</Page>
